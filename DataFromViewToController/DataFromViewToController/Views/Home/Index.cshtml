@model DataFromViewToController.Models.Employee

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Passing Data from View to Controller using various methods</h2>
    <div>
        <section>
            <h4>Pass data using Parameters</h4>
            @using (Html.BeginForm("PostUsingParameters", "Home"))
            {
                <label for="firstName">FirstName:</label>
                <input type="text" name="firstName" /><br />
                <label for="lastName">LastName:</label>
                <input type="text" name="lastName" /> <br />
                <input type="submit" value="Submit" />
            }
        </section>
    </div>
    <hr />
    <div>
        <section>
            <h4>Pass data using Requests</h4>
            @using (Html.BeginForm("PostUsingRequests", "Home"))
            {
                <input type="text" name="firstName" /><br />
                <input type="text" name="lastName" /> <br />
                <input type="submit" value="Submit" />
            }
        </section>
    </div>
    <hr />
    <div>
        <section>
            <h4>Pass data using Form Collection</h4>
            @using (Html.BeginForm("PostUsingFormCollection", "Home"))
            {
                <input type="text" name="firstName" /><br />
                <input type="text" name="lastName" /> <br />
                <input type="submit" value="Submit" />
            }
        </section>
    </div>
    <hr />
    <div>
        <section>
            <h4>Pass data using Strongly Binding</h4>
            @using (Html.BeginForm("PostUsingBinding", "Home", FormMethod.Post))
            {
                @Html.TextBoxFor(x => x.firstName)
                <br />
                @Html.TextBoxFor(x => x.lastName)
                <br />
                <input type="submit" value="Submit" />
            }
        </section>
    </div>
</body>
</html>
